<!-- Modal for email communication -->


<div id="emailModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Manage communications</h4>
            </div>
            <div class="modal-body">


                <div class="divDialogElements">
                    <ul class="nav nav-tabs" data-tabs="tabs">
                        <li class="active"><a href="#log" ng-click="getMessages()">Log</a></li>
                        <li><a href="#createNew">Create New <span class="glyphicon glyphicon-plus"></span></a></li>
                    </ul>
                    <div id="my-tab-content" class="tab-content">
                        <div class="tab-pane active" id="log">
                        <br>
                            <table>
                                <thead>
                                    <tr>
                                        <th class="col-xs-point5">
                                            Date
                                        </th>
                                        <th class="col-xs-point5">
                                            Subject
                                        </th>
                                        <th class="col-xs-point5">
                                            Email
                                        </th>
                                        <th class="col-xs-point5">
                                            Letter
                                        </th>
                                        <th class="col-xs-point5">
                                            Telephone
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="log-table">
                                    <tr ng-repeat="m in messageLog | orderBy:'-createdAt'">
                                        <td>{{m.createdAtPretty}}</td>
                                        <td>{{m.subject}}</td>
                                        <td><b ng-if="!m.letterSent"><a ng-href="{{m.emailList}}" ng-if="m.volunteersEmail.length > 0" target="_blank">{{m.volunteersEmail.length}} Email Addresses <i class="fa fa-envelope-o"></i></a></b>

                                        <i ng-if="!(m.volunteersEmail.length > 0)">
                                        No Emails sent
                                        </i>

                                        </td>

                                        <td>
                                        <b ng-if="!m.letterSent"><a ng-href="{{m.letterURL}}" target="_blank" ng-if="m.volunteersLetter.length > 0">{{m.volunteersLetter.length}} Letters <i class="fa fa-file-pdf-o"></i></a></b>

                                        <i ng-if="!(m.volunteersLetter.length > 0)">
                                        No Letters
                                        </i>
                                        </td>
                                        <td>
                                            <b ng-if="!m.telSent"><a ng-href="{{m.telephoneList}}" target="_blank" ng-if="m.volunteersTel.length > 0">{{m.volunteersTel.length}} Telephone Number<span ng-if="m.volunteersTel.length > 1">s</span> <i class="fa fa-file-pdf-o"></i></a></b>

                                            <i ng-if="!(m.volunteersTel.length > 0)">
                                                No Telephone Numbers
                                            </i>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                            <br>
                        </div>

                        <div class="tab-pane" id="createNew">
                            <div class="container">

                                <div class="row">
                                    <div class="col-sm-6">
                                    Recipients:<br><span ng-repeat="v in selected()"><span style="text-transform: uppercase;">{{v.First_Name}} {{v.Last_Name}}</span></span>,<br>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            Subject:<input class="form-control" ng-model="email.subject" ng-change="emailChange()">
                                            Body:<%- include('editor.ejs') %>
                                            
                                        </div>
                                        
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                        <br>
                                            <b>{{emailPreview.subject}}</b>
                                            <br><br>
                                            <div class="col-sm-6" style="white-space: pre-wrap;">{{emailPreview.body}}</div>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        Communication method:
                                        <select ng-model="email.communicationType" class="form-control">
                                            <option value="commPref">Communication Pref</option>
                                            <option value="Email">Force Email</option>
                                            <option value="Letter">Force Letter</option>
                                            <option value="Telephone">Force Telephone</option>
                                        </select>
                                    </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>

                <div class="modal-footer">
                    
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                    <button class="btn btn-primary" ng-click="sendEmail()">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>